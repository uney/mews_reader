<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:scaleType="center" >
    </ImageView>

    <com.facebook.widget.LoginButton
        android:id="@+id/fb_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guest_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />


    <Button
        android:id="@+id/guest_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fb_login_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/fb_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/guest_login_btn"
        android:onClick="guestLogin" />

</RelativeLayout>